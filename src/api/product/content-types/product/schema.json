{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Produk e-commerce InShan Media"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "blocks"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "sale_price": {
      "type": "decimal"
    },
    "sku": {
      "type": "string",
      "unique": true
    },
    "stock_quantity": {
      "type": "integer",
      "default": 0
    },
    "weight": {
      "type": "decimal"
    },
    "dimensions": {
      "type": "json"
    },
    "brand": {
      "type": "string"
    },
    "tags": {
      "type": "json"
    },
    "images": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": true
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    }
  }
}
